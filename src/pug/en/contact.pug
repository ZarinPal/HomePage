extends ../partials/layout

block project-info
	- var pagename = 'Contact Us'
	- var single_en = true
	- var lang = 'en'

block content


	<!-- .ZarinPal -->
	include ../partials/header

	section.section--primary
		.container
			h1.section--primary--title Contact Us
			hr.fancy

	section.section
		.container
			.row
				.column__mobile-16.column__tablet-9
					.section--content
						.map-location#map(data-latlang="35.7483561,51.4145672")
						p
							| – Phone:
							a(tel=+982188636000)
								|+98 21 88636000
							br
							| – Address: Unit 2, No. 61, 20th Avenue, Yousef Abad, Tehran, Iran
							br
							| –Zip Code: 1431956371
							br
							| –Working Hours: Saturday-Wednesday, 9:00 am to 5:00 pm
							br
							|Ticket Tracking: To see and answer to previous tickets please<a href="/guestTicket/search/"> click here</a>.

				.column__mobile-16.column__tablet-7
					form(action='/guestTicket/create', method="post")
						form.form.form--border
							label.label
								span.place Full Name
								input.input__en.is-border(type="text" name="name" placeholder="Full Name" required="true")

							label.label
								span.place Mobile Phone Number
								input.input__en.is-border(type="text" maxlength="11" name="phone" placeholder="+98 9120000000" required="true")

							label.label
								span.place Email Address
								input.input__en.is-border(type="email" name="email" placeholder="Email Address" required="true")
							
							label.label
								span.place Department
								select.input__en.is-border(name="")
									option(value="1") #1
									option(value="2") #2
									
							label.label
								span.place Subject
								input.input__en.is-border(type="text" name="title" placeholder="Subject" required="true")

							label.label
								span.place Description
								textarea.input__en.is-border.textarea(type="text" name="content" placeholder="Text Messaging" required="true" row="30")
							div(class="g-recaptcha" data-sitekey="6Lcrtc4SAAAAAKekvip0yI9Dp2DKXyVtliBXnqHS")
							label.label
								button.btn.btn-blue Submit
block footer
	script(type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3.exp")
	script(src='https://www.google.com/recaptcha/api.js?hl=en-US')
	script(type="text/javascript").
		var map, myIcon;
		var elmID = 'map',
			ObjID = $('#' + elmID),
			LatLang = ObjID.data('latlang').split(','),
			Lat = parseFloat(LatLang[0]),
			Lang = parseFloat(LatLang[1]);

		function initialize() {
			var mapOptions = {
				zoom: 17,
				center: new google.maps.LatLng(Lat, Lang),
				disableDefaultUI: true,
				scrollwheel: false,
				scaleControl: true,
				zoomControl: true,
				zoomControlOptions: {
					style: google.maps.ZoomControlStyle.LARGE,
					position: google.maps.ControlPosition.TOP_LEFT
				},
				mapTypeId: google.maps.MapTypeId.ROADMAP
			};
			// myIcon = new google.maps.MarkerImage("dist/img/map-marker.png", null, null, null, new google.maps.Size(40, 52));
			map = new google.maps.Map(document.getElementById('map'), mapOptions);
			var marker = new google.maps.Marker({
				position: new google.maps.LatLng(Lat, Lang),
				map: map,
				optimized: false
			});

		}
		google.maps.event.addDomListener(window, 'load', initialize);


	include ../partials/footer
	<!-- /.ZarinPal -->
